{
  "env": {
    "es2021": true,
    "node": true,
    "mocha": true
  },
  "extends": ["airbnb"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["eslint-plugin-jsx-a11y"],
  "rules": {
    "function-paren-newline": ["off"],
    "import/prefer-default-export": ["off"],
    "max-len": ["error", { "code": 120 }],
    "no-console": ["off"],
    "no-nested-ternary": ["off"],
    "semi": ["error", "always"]
  }
}
